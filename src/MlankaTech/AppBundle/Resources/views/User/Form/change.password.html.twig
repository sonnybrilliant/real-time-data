<div class="row">
    <div class="col-sm-12">
        <div class="tab-container">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab"
                                      href="http://numetro.mlankatech.co.za/secured/user/profile/kutlwano-tjabane.html#home"><i
                                class="fa fa-user"></i>&nbsp;&nbsp;Change password</a></li>
            </ul>
            <div class="tab-content">
                <div id="home" class="tab-pane active cont">
                    <form style="margin-bottom: 0px !important;" class="form-horizontal" method="post"
                          data-parsley-validate autocomplete="off" {{ form_enctype(form) }}
                          action="{{ path('mlanka_tech_app.user_change_password', {slug: user.slug}) }}.html" {% if app.debug %}  novalidate="true"{% endif %} >
                        <div class="content">
                            {% include '::alert.html.twig' %}
                            <div class="col-sm-7">
                                {{ form_row(form.oldPassword) }}
                            </div>
                            <div class="col-sm-7">
                                {{ form_row(form.newPassword.first) }}
                            </div>
                            <div class="col-sm-7">
                                {{ form_row(form.newPassword.second) }}
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-12">
                            <div class="text-center">
                                <button class="btn btn-primary btn-lg" type="submit" tabindex="9"><i class="fa fa-floppy-o"></i>&nbsp;Save</button>
                            </div>
                        </div>
                        <div class="form-group"></div>
                        {{ form_rest(form) }}
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>